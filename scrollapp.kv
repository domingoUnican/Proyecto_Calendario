<Calendario>:
    id: layout1
    orientation: 'bt-lr' 
    GridLayout:
        rows: 2
        ScrollView:
            id: scrlv
            size_hint: 0.9,0.95
            GridLayout:
                cols: 2
                size_hint_y: None
                id: layout2
        Slider:
            id: s
            min: 0
            max: 1
            value: 25
            orientation: 'vertical'
            step: 0.01
            size_hint: (0.1, 0.95)

        Button:
            id: closebutton
            text: 'Guardar y Cerrar'
            size_hint: (0.9,0.05)



<Principal>:
    id: layout1
    orientation: 'vertical'
    spacing: 0

    Button:
        id: btnExit
        text: "Salir"
        on_press: app.stop() 


    Button:
        id: btnPres
        text: "Calendario"

    
        
