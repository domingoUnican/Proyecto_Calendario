<Boxes>:					
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        ScreenManager:
            size_hint: .9, .8
            id: _screen_manager
            Screen:
                name: 'Principal'
                GridLayout:
                    orientation: 'horizontal'
                    padding: 0
                    cols: 8
                    rows: 2
                    id: _main
                    
            Screen:
                name: 'dia'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _morning
            Screen:
                name: 'noche'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _afternoon
            Screen:
                name: 'incidencias'
                BoxLayout:
                    orientation: 'vertical'
                    padding: 50
                    id: _incidences
            Screen:
                name: 'libres_dia'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _morning_free
            Screen:
                name: 'libres_noche'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _afternoon_free
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			Boton2:
				text: 'Acción: Intercambiar asignaturas'
				on_press: app.changeAula()
			Button:
				text: 'Reiniciar el filtro'
				on_press: app.resetFilter()
			Button:
				text: 'Filtro seleccionado: Ninguno'

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            Button:
                text: 'Principal'
                on_press: _screen_manager.current = 'Principal'
            Button:
                text: 'Horario de mañana'
                on_press: _screen_manager.current = 'dia'
                
            Button:
                text: 'Horario de tarde'
                on_press: _screen_manager.current = 'noche'
            Button:
                text: 'Incidencias'
                on_press: _screen_manager.current = 'incidencias'

            Button:
                text: 'Aulas libres (mañana)'
                on_press: _screen_manager.current = 'libres_dia'
            Button:
                text: 'Aulas libres (tarde)'
                on_press: _screen_manager.current = 'libres_noche'
            Button:
                text: 'Guardar'
                on_press: app.save()
            Button:
                text: 'Salir'
                on_press: app.stop()
