<Boxes>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            size_hint: 1, .9
            id: _screen_manager
            Screen:
                name: 'dia'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _morning
            Screen:
                name: 'noche'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _afternoon
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            Button:
                text: 'Horario de ma√±ana'
                on_press: _screen_manager.current = 'dia'
            Button:
                text: 'Horario de tarde'
                on_press: _screen_manager.current = 'noche'
            Button:
                text: 'Salir'
                on_press: app.stop()
