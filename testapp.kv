<Boxes>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            size_hint: 1, .9
            id: _screen_manager
            Screen:
                name: 'Principal'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 0
                    id: _main
                    
            Screen:
                name: 'dia'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _morning
            Screen:
                name: 'noche'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _afternoon
			Screen:
                name: 'incidencias'
                BoxLayout:
                    orientation: 'horizontal'
                    padding: 50
                    id: _incidences
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            Button:
                text: 'Principal'
                on_press: _screen_manager.current = 'Principal'
            Button:
                text: 'Horario de manana'
                on_press: _screen_manager.current = 'dia'
            Button:
                text: 'Horario de tarde'
                on_press: _screen_manager.current = 'noche'
			Button:
                text: 'Incidencias'
                on_press: _screen_manager.current = 'incidencias'
            Button:
                text: 'Guardar'
				on_press: app.save()
            Button:
                text: 'Salir'
                on_press: app.stop()
